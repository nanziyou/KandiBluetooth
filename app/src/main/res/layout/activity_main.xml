<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="关闭回显"
            android:id="@+id/close_echo_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="268dp"
            android:layout_height="0dp"
            android:weightSum="1"
            android:id="@+id/LLay2"
            android:layout_weight="0.1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免提初始化(上电只需初始化一次)"
                android:id="@+id/handsfreeinit_button"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/handsfreeinit_textView"
                android:layout_weight="1.85" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/LLay1"
            android:weightSum="1"
            android:layout_weight="0.1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音频初始化(上电只需初始化一次)"
                android:id="@+id/audinit_button"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/audinit_textView"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.87" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="查询蓝牙地址"
            android:id="@+id/inquiry_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="49dp"
            android:layout_weight="0.1" />

        <TextView
            android:layout_width="319dp"
            android:layout_height="0dp"
            android:text="获取到的地址"
            android:id="@+id/addrs_textView"
            android:minLines="6"
            android:layout_weight="0.1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配对地址"
                android:id="@+id/pair_button"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pairaddr_editText"
                android:layout_weight="0.74" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pairSuccess_textView"
                android:layout_weight="0.21" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入PINCODE(4位)"
                android:id="@+id/pincode_button"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/pincode_editText"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/pincodeSuccess_textView"
                android:layout_weight="0.86" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"
            android:layout_weight="0.1"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接手机蓝牙和音频蓝牙"
                android:id="@+id/conaudhf_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/conaudhf_textView"
                android:layout_weight="0.82" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
